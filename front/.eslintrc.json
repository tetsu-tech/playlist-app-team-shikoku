{
  "env": {
    "browser": true,
    "es6": true
  },
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/eslint-recommended",
		"plugin:@typescript-eslint/recommended",
		"plugin:react/recommended",
		"prettier"
	],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
	"plugins": [
		"react",
		"@typescript-eslint",
		"prettier"
	],
	"rules": {
    "prettier/prettier": "error",
    "react/react-in-jsx-scope": "off",
		"no-extra-semi": "error"
	},
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
